<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        #game-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }
        .game-item {
            background-color: #fff;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            cursor: pointer;
        }
        .game-item:hover {
            transform: translateY(-5px);
        }
        .game-icon {
            font-size: 48px;
            margin-bottom: 10px;
            display: block;
        }
        .game-item p {
            margin: 0;
            font-size: 18px;
            color: #333;
        }
    </style>
</head>
<body>
    <h1><%= title %></h1>
    <div id="game-grid">
        <% const games = [
            { id: 1, name: '猜数字', icon: '🔢', url: '/game/guess-number' },
            { id: 2, name: '记忆翻牌', icon: '🃏', url: '/game/memory-game' },
            { id: 3, name: '2048', icon: '🧩', url: '/game/2048' },
            { id: 4, name: '贪吃蛇', icon: '🐍', url: '/game/snake' },
            { id: 5, name: '俄罗斯方块', icon: '🧱' },
            { id: 6, name: '五子棋', icon: '⚫⚪' },
            { id: 7, name: '扫雷', icon: '💣' },
            { id: 8, name: '数独', icon: '🔢' },
            { id: 9, name: '拼图', icon: '🧩' },
            { id: 10, name: '神奇四环', icon: '🔄', url: '/game/magic-rings' },
            { id: 11, name: '对称分区', icon: '🔳', url: '/game/symmetric-partition' }
        ]; %>
        
        <% games.forEach(game => { %>
            <div class="game-item" data-id="<%= game.id %>" onclick="window.location.href='<%= game.url || '#' %>'">
                <span class="game-icon"><%= game.icon %></span>
                <p><%= game.name %></p>
            </div>
        <% }); %>
    </div>
    <script src="/js/main.js"></script>
</body>
</html>
